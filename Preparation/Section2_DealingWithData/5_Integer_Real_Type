#include <iostream>
#include <climits>				// 드래그 후 F12 눌러서 확인해보자.
using namespace std;

int main() {

	// 정수부 : 소수부가 없는 수.
	// 음의 정수, 0, 양의 정수
	// short < int < long < long long

	int n_int = INT_MAX;
	short n_short = SHRT_MAX;
	long n_long = LONG_MAX;
	long long n_llong = LLONG_MAX;

	cout << "int는 " << sizeof n_int << " 바이트이다. " << endl;
	cout << "이 바이트의 최댓값은 " << n_int << " 이다." << endl;

	cout << "short는 " << sizeof n_short << " 바이트이다. " << endl;
	cout << "이 바이트의 최댓값은 " << n_short << " 이다." << endl;			// Short 자료형의 표현 범위 : -32768 ~ 32767 (-2^15 ~ 2^15-1)

	cout << "int는 " << sizeof n_long << " 바이트이다. " << endl;
	cout << "이 바이트의 최댓값은 " << n_long << " 이다." << endl;

	cout << "int는 " << sizeof n_llong << " 바이트이다. " << endl;
	cout << "이 바이트의 최댓값은 " << n_llong << " 이다." << endl;

	unsigned short b = -2;
	cout << b << endl;


	/*
	2. 실수형 : 소수부가 있는 수
	*/

	float a = 3.14;
	int c = 3.14;

	cout << a << " " << c << endl;

	return 0;
}
