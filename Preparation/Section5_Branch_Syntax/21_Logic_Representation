#include <iostream>

using namespace std;

int main() {
	// 논리 표현식
	// 논리합, 논리곱, 논리부정 연산자
	
	// 논리합
	/*
	* (좌항) || (우항)
	*/
	bool a = (5==5 || 5 == 9);
	bool b = (5 > 9 || 5 < 2);
	cout << a << endl;				// 1
	cout << b << endl;				// 0

	// 논리곱
	/*
	* (좌항) && (우항)
	*/
	bool c = (5 == 5 && 9 == 9);
	bool d = (10 < 2 && 10 > 2);
	cout << c << endl;				// 1
	cout << d << endl;				// 0

	// 논리부정
	/*
	* !(피연산자)
	*/
	bool e = !(0 == 0);
	bool f = !(0);
	bool g = !(10);
	cout << e << f << g << endl;		// 010

	return 0;
}
