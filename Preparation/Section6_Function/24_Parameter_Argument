#include <iostream>

using namespace std;

void helloCPP(int, int);        // 매개변수 2개

int main() {
    int times, times2;
    cout << "정수를 입력하십시오. \n";
    cin >> times;
    cout << "정수를 한번 더 입력하십시오. \n";
    cin >> times2;
    helloCPP(times, times2);

	return 0;
}

// 매개변수와 전달인자는 놓여진 순서에 따라 1:1 대응된다. 이름은 같지 않아도 돼!
void helloCPP(int n, int m) {
    for (int i = 0; i < n; i++)
        cout << "Hello\n";

    for (int i = 0; i < m; i++)
        cout << "C++\n";
}
