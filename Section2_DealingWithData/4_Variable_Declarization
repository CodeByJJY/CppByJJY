#include <iostream>

using namespace std;

int main() {
	// 변수란? : 변할 수 있는 수.

	/*
	[중요 포인트]
	1. 변수 이름
	2. 변수 자료형
	3. 변수가 저장되는 위치(메모리 공간) : 컴파일러가 자동으로 결정함.
	*/

	int a;
	a = 7;

	int b = 3;		// 초기화 : 변수 선언과 동시에 값 입력.

	a = 5;
	b = 10;

	cout << "a = " << a << ", b = " << b << endl;				// 값 확인
	cout << "a = " << &a << ", b = " << &b << endl;		// 메모리 주소 확인

	/*
	[변수 선언 규칙]
	1. 숫자로 시작할 수 없다.
	2. C++에서 사용 중인 키워드를 사용할 수 없다.
	3. White Space를 사용할 수 없다.
	*/

	int 777aa;					//	1번 위반
	int return;					// 2번 위반
	int lionel messi;		// 3번 위반

	// 주의사항 : 변수는 사용되기 이전에 먼저 선언되어야 한다.
	c = 7;
	int c;

	// x는 사용 가능하지만, y는 블록 내부에서만 사용 가능하므로 아래의 코드는 틀렸다.
	{
		int x;
		{
			int y;
			x = 7;
		}
		y = 5;
	}

	return 0;
}
